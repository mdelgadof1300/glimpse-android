<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/rootLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#fdfdfc"
        tools:context="com.glimpse.app.MainActivity">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#fafff7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSofa"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sofa"
                app:chipBackgroundColor="@color/colorAccent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipChair"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chair"
                app:chipBackgroundColor="@color/colorAccent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBed"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bed"
                app:chipBackgroundColor="@color/colorAccent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTable"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table"
                app:chipBackgroundColor="@color/colorAccent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDecor"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decor"
                app:chipBackgroundColor="@color/colorAccent" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</RelativeLayout>